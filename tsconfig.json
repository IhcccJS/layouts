{
  "compilerOptions": {
    "target": "ES6",
    "strict": true,
    "declaration": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "lib": ["ES2017", "DOM"],
    "jsx": "react",
    "baseUrl": "./",
    "paths": {
      "@@/*": [".dumi/tmp/*"],
      "@ihccc/layouts": ["src"],
      "@ihccc/layouts/*": ["src/*", "*"]
    },
    "outDir": "./"
  },
  "include": ["src/**/*", ".dumirc.ts"],
  "exclude": ["node_modules", "es/**/*", "cjs/**/*", "dist/**/*"]
}
